<?xml version="1.0"?>
<Container version="2">
  <Name>Crafty-4</Name>
  <Repository>registry.gitlab.com/crafty-controller/crafty-4:latest</Repository>
  <Registry>https://gitlab.com/crafty-controller/crafty-4/container_registry/2952493</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/hofq/docker-templates/issues/new</Support>
  <Project>https://gitlab.com/crafty-controller/crafty-4/-/tree/master</Project>
  <Overview>Crafty Controller is a Minecraft Server Control Panel / Launcher. &#xD;
  The purpose of Crafty Controller is to launch and manage Minecraft Servers in a Web UI.&#xD;
  The Software was created by The Crafty Team.&#xD;
  Crafty 4 Gitlab repo: https://gitlab.com/crafty-controller/crafty-4
  </Overview>
  <Category>Other:</Category>
  <WebUI>http://[IP]:[PORT:8000]</WebUI>
  <TemplateURL/>
  <Icon>https://github.com/hofq/docker-templates/blob/main/pictures/Crafty-4.png?raw=true</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled/>
  <DonateText/>
  <DonateLink/>
  <Description>Crafty Controller is a Minecraft Server Control Panel / Launcher. &#xD;
  The purpose of Crafty Controller is to launch and manage Minecraft Servers in a Web UI.&#xD;
  The Software was created by The Crafty Team.&#xD;
  Crafty 4 Gitlab repo: https://gitlab.com/crafty-controller/crafty-4
  </Description>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>8000</HostPort>
        <ContainerPort>8000</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>8226</HostPort>
        <ContainerPort>8123</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>19132</HostPort>
        <ContainerPort>19132</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>25500-25600</HostPort>
        <ContainerPort>25500-25600</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
      <Volume>
      <HostDir>/mnt/user/appdata/crafty-4/backups</HostDir>
      <ContainerDir>/crafty/backups</ContainerDir>
      <Mode>rw</Mode>
      </Volume>
     <Volume>
      <HostDir>/mnt/user/appdata/crafty-4/logs</HostDir>
      <ContainerDir>/crafty/logs</ContainerDir>
      <Mode>rw</Mode>
      </Volume>
     <Volume>
      <HostDir>/mnt/user/appdata/crafty-4/servers</HostDir>
      <ContainerDir>/crafty/servers</ContainerDir>
      <Mode>rw</Mode>
      </Volume>
     <Volume>
      <HostDir>/mnt/user/appdata/crafty-4/config</HostDir>
      <ContainerDir>/crafty/app/config</ContainerDir>
      <Mode>rw</Mode>
      </Volume>
     <Volume>
      <HostDir>/mnt/user/appdata/crafty-4/import</HostDir>
      <ContainerDir>/crafty/import</ContainerDir>
      <Mode>rw</Mode>
      </Volume>
  </Data>
  <Environment/>
  <Labels/>
  <Config Name="Web UI" Target="8000" Default="8000" Mode="tcp" Description="HTTP Web UI Port" Type="Port" Display="always" Required="true" Mask="false">8000</Config>
  <Config Name="Dynmap" Target="8123" Default="8226" Mode="tcp" Description="Dynmap Port [Container: 8123]" Type="Port" Display="always" Required="false" Mask="false">8226</Config>
  <Config Name="Bedrock" Target="19132" Default="19132" Mode="udp" Description="Minecraft Bedrock Edition Port" Type="Port" Display="always" Required="false" Mask="false">19132</Config>
  <Config Name="Backups" Target="/crafty/backups" Default="/mnt/user/appdata/crafty-4/backups" Mode="rw" Description="Backup Location" Type="Path" Display="always" Required="false" Mask="false">/mnt/user/appdata/crafty-4/backups</Config>
  <Config Name="Logs" Target="/crafty/logs" Default="/mnt/user/appdata/crafty-4/logs" Mode="rw" Description="Log Location" Type="Path" Display="always" Required="false" Mask="false">/mnt/user/appdata/crafty-4/logs</Config>
  <Config Name="Servers" Target="/crafty/servers" Default="/mnt/user/appdata/crafty-4/servers" Mode="rw" Description="MC Server Location" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/crafty-4/servers</Config>
  <Config Name="Config" Target="/crafty/app/config" Default="/mnt/user/appdata/crafty-4/config" Mode="rw" Description="Config Location" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/crafty-4/config</Config>
  <Config Name="Import" Target="/crafty/import" Default="/mnt/user/appdata/crafty-4/import" Mode="rw" Description="Import Location" Type="Path" Display="always" Required="false" Mask="false">/mnt/user/appdata/crafty-4/import</Config>

</Container>
